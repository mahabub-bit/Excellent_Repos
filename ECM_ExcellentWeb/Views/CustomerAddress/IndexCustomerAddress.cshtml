@model IEnumerable<ECM_ExcellentWeb.Model.Dto.CustomerAddressDTO>
<br />
<div class="row pb-2">
    <div class="col">
        <h1 class="text-primary">Customer Address List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-contoller="Category" asp-action="CreateCustomerAddress" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New CustomerAddress</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Customer Address Id
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Shipping House Number 
                </th>
                <th>
                    Shipping Street
                </th>
                <th>
                    Shipping City
                </th>
                <th>
                    Shipping State
                </th>
                <th>
                    Shipping Country
                </th>
                <th>
                    Shipping Zip Code
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Customer.CustomerName</td>
                    <td>@item.ShipHNo</td>
                    <td>@item.ShipStreet</td>
                    <td>@item.ShipCity</td>
                    <td>@item.ShipState</td>
                    <td>@item.ShipCountry</td>
                    <td>@item.ShipZip</td>
                    <td>
                        <a asp-contoller="CustomerAddress" asp-action="UpdateCustomerAddress" asp-route-customerAddressId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-contoller="CustomerAddress" asp-action="DeleteCustomerAddress" asp-route-customerAddressId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>