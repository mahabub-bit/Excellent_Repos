@model ECM_ExcellentWeb.Models.VM.CustomerAddressDeleteVM

<form asp-action="DeleteCustomerAddress">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Customer Address</h1>
        <hr />
        <input hidden asp-for="CustomerAddress.Id" />


        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="CustomerAddress.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.Id" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.CustomerId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.CustomerId" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipHNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipHNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipStreet" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipStreet" disabled class="form-control" rows="5" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipCity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipCity" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipState" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipState" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipCountry" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipCountry" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress.ShipZip" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress.ShipZip" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexCustomerAddress" asp-controller="CustomerAddress" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
