@model ECM_ExcellentWeb.Models.VM.CategoryDeleteVM

<form asp-action="DeleteCategory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Category</h1>
        <hr />

        <input hidden asp-for="Category.Id" />

        <div class="row">

            <div class="col-2">
                <label asp-for="Category.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Category.Id" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Category.CompanyId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Category.CompanyId" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Category.CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Category.CategoryName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Category.CategoryDescription" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Category.CategoryDescription" disabled class="form-control" rows="5"/>
            </div>

            <div class="col-2">
                <label asp-for="Category.CategoryImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Category.CategoryImage" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexCategory" asp-controller="Category" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
