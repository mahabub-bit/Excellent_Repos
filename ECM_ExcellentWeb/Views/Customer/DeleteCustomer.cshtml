@model ECM_ExcellentWeb.Model.Dto.CustomerDTO
<form asp-action="DeleteCustomer">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Customer</h1>
        <hr />

        <input hidden asp-for="Id" />

        <div class="row">

            <div class="col-2">
                <label asp-for="Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Id" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerAddress" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerAddress" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CustomerMobile" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CustomerMobile" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexCustomer" asp-controller="Customer" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

