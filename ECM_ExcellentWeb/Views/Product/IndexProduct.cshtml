@model IEnumerable<ECM_ExcellentWeb.Model.Dto.ProductDTO>
<br />
<div class="row pb-2">
    <div class="col">
        <h1 class="text-primary">Product List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-contoller="Product" asp-action="CreateProduct" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Product</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Product Code
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Product Description
                </th>
                <th>
                    Company Id
                </th>
                <th>
                    Category Id 
                </th>
                <th>
                    CategoryType Id
                </th>
                <th>
                    Supplier Id
                </th>
                <th>
                    QtyPerUnit
                </th>
                <th>
                    Retail Price
                </th>
                <th>
                    MRP Price
                </th>
                <th>
                    Product Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PCode</td>
                    <td>@item.PName</td>
                    <td>@item.PDesc</td>
                    <td>@item.Company.CName</td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.CategoryType.CatTypeName</td>
                    <td>@item.Supplier.Supplier_Name</td>
                    <td>@item.QtyPerUnit</td>
                    <td>@item.RetailerPrice</td>
                    <td>@item.MRPPrice</td>
                    <td>@item.PImage</td>
                    <td>
                        <a asp-contoller="Product" asp-action="UpdateProduct" asp-route-productId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-contoller="Product" asp-action="DeleteProduct" asp-route-productId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>