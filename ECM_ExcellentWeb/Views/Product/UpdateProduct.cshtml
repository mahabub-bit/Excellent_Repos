@model ECM_ExcellentWeb.Models.VM.ProductUpdateVM

<form asp-action="UpdateProduct">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Product</h1>
        <hr />
        <input hidden asp-for="Product.Id" />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Product.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.Id" class="form-control" />
                <span asp-validation-for="Product.Id" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.PCode" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.PCode" class="form-control" />
                <span asp-validation-for="Product.PCode" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.PName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.PName" class="form-control" />
                <span asp-validation-for="Product.PName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.PDesc" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.PDesc" class="form-control" />
                <span asp-validation-for="Product.PDesc" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.CompanyId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="Product.CompanyId" class="form-select" asp-items="@Model.CompanyList">
                    <option disabled selecte>--Select Company--</option>
                </select>
                <span asp-validation-for="Product.CompanyId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="Product.CategoryId" class="form-select" asp-items="@Model.CategoryList">
                    <option disabled selecte>--Select Category--</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.CategoryTypeId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="Product.CategoryTypeId" class="form-select" asp-items="@Model.CategoryTypeList">
                    <option disabled selecte>--Select CategoryType--</option>
                </select>
                <span asp-validation-for="Product.CategoryTypeId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.SupplierId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="Product.SupplierId" class="form-select" asp-items="@Model.SupplierList">
                    <option disabled selecte>--Select Supplier--</option>
                </select>
                <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Product.QtyPerUnit" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.QtyPerUnit" class="form-control" />
                <span asp-validation-for="Product.QtyPerUnit" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.RetailerPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.RetailerPrice" class="form-control" rows="5" />
                <span asp-validation-for="Product.RetailerPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.MRPPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.MRPPrice" class="form-control" />
                <span asp-validation-for="Product.MRPPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.PackageSize" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.PackageSize" class="form-control" />
                <span asp-validation-for="Product.PackageSize" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.PImage" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.PImage" class="form-control" />
                <span asp-validation-for="Product.PImage" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexProduct" asp-controller="Product" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

