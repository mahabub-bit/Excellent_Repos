@model IEnumerable<ECM_ExcellentWeb.Model.Dto.PurchaseOrderDTO>
<br />
<div class="row pb-2">
    <div class="col">
        <h1 class="text-primary">Purchase Order List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-contoller="PurchaseOrder" asp-action="CreatePurchaseOrder" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Purchase Order</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Purchase Order Date
                </th>
               @* <th>
                    User Id
                </th>*@
                <th>
                    Supplier Id
                </th>
                <th>
                    Company Id
                </th>
                <th>
                    Purchase Order Status
                </th>
                <th>
                    Purchase Order TotakPrice
                </th>
                <th>
                    Purchase Order Invoice
                </th>
                <th>
                    Purchase Order Payment Date
                </th>
                <th>
                    Purchase Order Payment Type
                </th>
                <th>
                    Product Id
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PO_Date</td>
                    @*<td>@item.UserId</td>*@
                    <td>@item.Supplier.Supplier_Name</td>
                    <td>@item.Company.CName</td>
                    <td>@item.PO_Status</td>
                    <td>@item.PO_TotalPrice</td>
                    <td>@item.PO_Invoice</td>
                    <td>@item.PaymentDate</td>
                    <td>@item.PaymentType</td>
                    <td>@item.Product.PName</td>
                    <td></td>
                    <td>
                        <a asp-contoller="PurchaseOrder" asp-action="UpdatePurchaseOrder" asp-route-purchaseOrderId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-contoller="PurchaseOrder" asp-action="DeletePurchaseOrder" asp-route-purchaseOrderId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>