@model IEnumerable<ECM_ExcellentWeb.Model.Dto.CompanyDTO>
<br />
<div class="container p-4 border">
    <div class="col">
        <h1 class="text-primary">Company List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-contoller="Company" asp-action="CreateCompany" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Company</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Company Id
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    Company Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    PostalCode
                </th>
                <th>
                    Business Phone
                </th>
                <th>
                    GST
                </th>
                <th>
                    Bank
                </th>
                <th>
                    Bank Account
                </th>
                <th>
                    Bank Branch
                </th>
                <th>
                    IFSC
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CName</td>
                    <td>@item.CAddress</td>
                    <td>@item.CCity</td>
                    <td>@item.CState</td>
                    <td>@item.CPostalCode</td>
                    <td>@item.CBusinessPhone</td>
                    <td>@item.CGST</td>
                    <td>@item.CBank</td>
                    <td>@item.CBankAccount</td>
                    <td>@item.CBankBranch</td>
                    <td>@item.CIFSC</td>
                    <td>
                        <a asp-contoller="Company" asp-action="UpdateCompany" asp-route-companyId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-contoller="Company" asp-action="DeleteCompany" asp-route-companyId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
