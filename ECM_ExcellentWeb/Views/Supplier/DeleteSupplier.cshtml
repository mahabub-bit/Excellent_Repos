@model ECM_ExcellentWeb.Models.VM.SupplierDeleteVM

<form asp-action="DeleteSupplier">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Supplier</h1>
        <hr />
        <input hidden asp-for="Supplier.Id" />

        <div class="row">

            <div class="col-2">
                <label asp-for="Supplier.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Id" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.CompanyId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.CompanyId" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.Supplier_Company_Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_Company_Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.Supplier_Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_Name" disabled class="form-control" rows="5" />
            </div>

            
            <div class="col-2">
                <label asp-for="Supplier.Supplier_Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_Email" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.Supplier_Business_Phone" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_Business_Phone" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.Supplier_Moblie_Phone" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_Moblie_Phone" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Supplier.Supplier_D" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Supplier.Supplier_D" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">
                <a asp-action="IndexSupplier" asp-controller="Supplier" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
