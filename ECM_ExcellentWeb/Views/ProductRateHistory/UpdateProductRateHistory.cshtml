@model ECM_ExcellentWeb.Models.VM.ProductRHUpdateVM

<form asp-action="UpdateProductRateHistory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Product Rate History</h1>
        <hr />
        <input hidden asp-for="ProductRateHistory.Id" />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ProductRateHistory.Id" class="form-control" />
                <span asp-validation-for="ProductRateHistory.Id" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="ProductRateHistory.ProductId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="ProductRateHistory.ProductId" class="form-select" asp-items="@Model.ProductList">
                    <option disabled selecte>--Select Product--</option>
                </select>
                <span asp-validation-for="ProductRateHistory.ProductId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="ProductRateHistory.CategoryId" class="form-select" asp-items="@Model.CategoryList">
                    <option disabled selecte>--Select Category--</option>
                </select>
                <span asp-validation-for="ProductRateHistory.CategoryId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.CategoryTypeId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="ProductRateHistory.CategoryTypeId" class="form-select" asp-items="@Model.CategoryTypeList">
                    <option disabled selecte>--Select CategoryType--</option>
                </select>
                <span asp-validation-for="ProductRateHistory.CategoryTypeId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.DateTime" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ProductRateHistory.DateTime" class="form-control" />
                <span asp-validation-for="ProductRateHistory.DateTime" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.Daily_Product_Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ProductRateHistory.Daily_Product_Price" class="form-control" rows="5" />
                <span asp-validation-for="ProductRateHistory.Daily_Product_Price" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductRateHistory.PRH_AddColunm" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ProductRateHistory.PRH_AddColunm" class="form-control" />
                <span asp-validation-for="ProductRateHistory.PRH_AddColunm" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="IndexProductRateHistory" asp-controller="ProductRateHistory" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

